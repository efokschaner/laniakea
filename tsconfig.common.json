{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["./vendored-types", "./node_modules/@types"]
  }
}
