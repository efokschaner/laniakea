{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "echo": true,
    "reveal": "silent",
    "focus": false,
    "panel": "shared"
  },
  "tasks": [
    {
      "taskName": "Build",
      "type": "shell",
      "command": "yarn run build",
      "options": {
        "cwd": "${workspaceRoot}"
      },
      "problemMatcher": [
        {
          "base": "$tsc",
          "fileLocation": ["relative", "${workspaceRoot}"]
        }
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}